<%= render "shared/header" %>
<div class='task-form'>
  <div class='title-box'>
  <h1 class='title'>仕事情報の入力</h1>
  </div>
  <div class='task-form-box'>
    
    <%= form_with model:@task, local: true do |f| %>
    <div class='weight-bold-text'>
    作業名
    </div>
    <%= f.text_area :name, class:"tasks-info", id:"task-name", placeholder:"作業名（必須 30文字まで)", maxlength:"30" %>
    <div class='weight-bold-text'>
    期限
    </div>
    <%= f.date_field :deadline, class:"task-date" %>
    <b>◀︎マークをクリックして選択</b>
    <div class='weight-bold-text'>
    注意・警告(○日前)
    </div>
    <%= f.collection_select(:notice, Notice.all, :id, :name, {}, {class:"select-box"}) %>
    <div class='weight-bold-text'>
    重要性
    </div>
    <%= f.collection_select(:importance_id, Importance.all, :id, :name, {}, {class:"select-box"}) %>
    <div class='weight-bold-text'>
    仕事の状況
    </div>
    <%= f.collection_select(:done_id, Done.all, :id, :name, {}, {class:"select-box"}) %>
    <div class='but-box'>
      <%= f.submit "作成" ,class:"make-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <% end %>
  </div>
</div>